{
  "format_version": "1.10.0",
  "minecraft:client_entity": {
    "description": {
      "identifier": "minecraft:guardian",
      "min_engine_version": "1.8.0",
      "materials": {
        "default": "guardian",
        "ghost": "guardian_ghost"
      },
      "textures": {
        "default": "textures/entity/guardian",
        "elder": "textures/entity/guardian_elder",
        "beam": "textures/entity/guardian_beam"
      },
      "geometry": {
        "default": "geometry.guardian.v1.8",
        "ghost": "geometry.guardian"
      },
      "animations": {
        "setup": "animation.guardian.setup",
        "spikes": "animation.guardian.spikes",
        "swim": "animation.guardian.swim",
        "look_at_target": "animation.common.look_at_target",
        "move_eye": "animation.guardian.move_eye"
      },
      "scripts": {
        "initialize": [
          "v.spike_animation_speed = 0.0;",
          "v.tail_animation_speed = 0.0;",
          "v.tail_swim = 0.0;"
        ],
        "pre_animation": [
          "v.spike_shake = Math.sin(query.life_time * 2000)/50;",
          "v.spike_animation_speed = q.life_time < 0.1 ? 0.0 : (!q.is_in_water ? (Math.round(Math.sin(q.life_time * 2000)) == 0.0 ? (Math.random(0.0, 1.0)) : (v.spike_animation_speed)) : (q.is_moving ? (v.spike_animation_speed - v.spike_animation_speed * 0.06) : (v.spike_animation_speed + (1.0 - v.spike_animation_speed) * 0.06)));",
          "v.spike_extension = (1.0 - variable.spike_animation_speed) * 0.55;",
          "v.tail_animation_speed = q.life_time < 0.1 ? 0.0 : (!q.is_in_water ? 2.0 : q.is_moving ? (v.tail_animation_speed < 0.5 ? 4.0 : v.tail_animation_speed + (0.5 - v.tail_animation_speed) * 0.1) : v.tail_animation_speed + (0.125 - v.tail_animation_speed) * 0.2);",
          "v.tail_swim = q.life_time < 0.1 ? 0.0 : (v.tail_swim + v.tail_animation_speed);",
          "v.tail_base_angle = Math.sin(v.tail_swim*20.0);"
        ],
        "animate": [
          "setup",
          "spikes",
          "swim",
          "look_at_target",
          "move_eye"
        ]
      },
      "render_controllers": [ "controller.render.guardian" ],
      "spawn_egg": {
        "texture": "spawn_egg_guardian"
      }
    }
  }
}
