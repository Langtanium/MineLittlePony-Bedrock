        "minelp_default": "textures/entity/copper_golem/copper_golem_dragon",
        "minelp_exposed": "textures/entity/copper_golem/exposed_copper_golem_dragon",
        "minelp_weathered": "textures/entity/copper_golem/weathered_copper_golem_dragon",
        "minelp_oxidized": "textures/entity/copper_golem/oxidized_copper_golem_dragon",
        "minelp_eyes_default": "textures/entity/copper_golem/copper_golem_eyes_dragon",
        "minelp_eyes_exposed": "textures/entity/copper_golem/exposed_copper_golem_eyes_dragon",
