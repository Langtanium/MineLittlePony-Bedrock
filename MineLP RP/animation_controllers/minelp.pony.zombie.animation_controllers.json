{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.minelp.pony.zombie.default.arms": {
            "states": {
                "default": {
                    "animations": [
                        "bob.rightArm",
                        "show_attack.rightArm",
                        "show_movement.leftArm"
                    ],
                    "transitions": [
                        { "holding_left": "v.is_holding_left  && ( v.minelp_handedness == 1.0 || !v.is_holding_right )" }
                    ]
                },
                "holding_left": {
                    "animations": [
                        "bob.leftArm",
                        "show_attack.leftArm",
                        "show_movement.rightArm"
                    ],
                    "transitions": [
                        { "default": "v.is_holding_right && ( v.minelp_handedness == 0.0 || !v.is_holding_left )" }
                    ]
                }
            }
        }
    }
}
