{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.minelp.pony.default": {
            "states": {
                "default": {
                    "animations": [
                        "look_at_target",
                        { "big_head": "q.is_baby" },
                        "default.arms",
                        { "arm_fix": "!(v.minelp_magic_type ?? 0)" },
                        { "arm_fix_magic": "(v.minelp_magic_type ?? 0)" },
                        { "show_movement.legs": "!(v.minelp_has_wings ?? 0) || q.is_on_ground" },
                        "bob.tail",
                        "show_movement.tail"
                    ]
                }
            }
        },
        "controller.animation.minelp.pony.default.arms": {
            "states": {
                "default": {
                    "animations": [
                        { "show_attack.rightArm": "!(v.minelp_magic_type ?? 0) || !v.is_holding_right" },
                        { "show_movement.leftArm": "!(v.minelp_has_wings ?? 0) || q.is_on_ground" },
                        { "show_movement.rightArm": "!(v.minelp_has_wings ?? 0) || q.is_on_ground" }
                    ],
                    "transitions": [
                        { "holding_left": "!(v.minelp_magic_type ?? 0) && v.is_holding_left && ((v.minelp_handedness ?? 0) == 1 || !v.is_holding_right)" },
                        { "holding_right": "!(v.minelp_magic_type ?? 0) && v.is_holding_right && ((v.minelp_handedness ?? 0) == 0 || !v.is_holding_left)" }
                    ]
                },
                "holding_left": {
                    "animations": [
                        { "bob.leftArm": "!q.get_actor_info_id('minecraft:player') == 63" },
                        "show_attack.leftArm",
                        { "show_movement.rightArm": "!(v.minelp_has_wings ?? 0) || q.is_on_ground" }
                    ],
                    "transitions": [
                        { "default": "(v.minelp_magic_type ?? 0) || (!v.is_holding_left && !v.is_holding_right)" },
                        { "holding_right": "!(v.minelp_magic_type ?? 0) && v.is_holding_right && ((v.minelp_handedness ?? 0) == 0 || !v.is_holding_left)" }
                    ]
                },
                "holding_right": {
                    "animations": [
                        { "bob.rightArm": "!q.get_actor_info_id('minecraft:player') == 63" },
                        "show_attack.rightArm",
                        { "show_movement.leftArm": "!(v.minelp_has_wings ?? 0) || q.is_on_ground" }
                    ],
                    "transitions": [
                        { "default": "(v.minelp_magic_type ?? 0) || ( !v.is_holding_left && !v.is_holding_right )" },
                        { "holding_left": "!(v.minelp_magic_type ?? 0) && v.is_holding_left && ((v.minelp_handedness ?? 0) == 1 || !v.is_holding_right)" }
                    ]
                }
            }
        }
    }
}
